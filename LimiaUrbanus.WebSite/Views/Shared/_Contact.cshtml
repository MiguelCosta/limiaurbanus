@model string

@using(Html.BeginForm("EnviarEmail", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label class="col-sm-2 control-label" for="email">O seu email</label>
        <div class="col-sm-10">
            <input class="form-control" id="email" name="email" required="required" type="email" placeholder="Introduza o seu email">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="assunto">Assunto</label>
        <div class="col-sm-10">
            <input class="form-control" id="assunto" name="assunto" required="required" value="@Model" type="text" placeholder="Introduza o assunto">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="mensagem">Mensagem</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="5" id="mensagem" name="mensagem" required="required" placeholder="Introduza a mensagem"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-default" type="submit">Enviar</button>
        </div>
    </div>
}
