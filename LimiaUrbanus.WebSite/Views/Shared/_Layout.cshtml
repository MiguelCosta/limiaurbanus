<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lima Urbanus @(string.IsNullOrWhiteSpace(ViewBag.Title) ? string.Empty : $"- {ViewBag.Title}")</title>

    <link rel="stylesheet" href="~/Content/kendo/2015.3.1111/kendo.common.min.css" />
    <link rel="stylesheet" href="~/Content/kendo/2015.3.1111/kendo.metro.min.css" />
    <link rel="stylesheet" href="~/Content/kendo/2015.3.1111/kendo.mobile.all.min.css" />
    <link rel="stylesheet" href="~/Content/trix.css" />

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/kendo/2015.3.1111/angular.min.js"></script>
    <script src="~/Scripts/kendo/2015.3.1111/kendo.ui.core.min.js"></script>
    <script src="~/Scripts/kendo/2015.3.1111/cultures/kendo.culture.pt-PT.min.js"></script>

    <script type="text/javascript">
        kendo.culture("pt-PT");
    </script>

    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/trix.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Limia Urbanus", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Comprar", "Search", "Imoveis")</li>
                    <li>@Html.ActionLink("Vender", "Vender", "Home")</li>
                    <li>@Html.ActionLink("Acerca", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Desenvolvido por <a href="mailto:miguelpintodacosta@gmail.com">Miguel Costa</a> </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
