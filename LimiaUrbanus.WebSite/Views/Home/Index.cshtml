    </div>
    <div class="col-md-3 text-center">
        <figure class="figure">
            <div class="user profile center-block">
            </div>
            <figcaption class="figure-caption"><b>Tiago Pita</b></figcaption>
        </figure>
    </div>
</div>

@Html.Partial("_ImoveisRandom")

<hr />
